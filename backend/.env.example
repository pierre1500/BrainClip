# BrainClip Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# OpenAI Configuration (REQUIRED)
# ===========================================

# Your OpenAI API key - get it from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model to use for note generation (default: gpt-4o)
OPENAI_MODEL=gpt-4o

# Maximum tokens for GPT response (default: 2000)
OPENAI_MAX_TOKENS=2000

# ===========================================
# Vault Configuration
# ===========================================

# Path to Obsidian vault (inside container: /app/vault)
# This is mounted from ./vault in the project root
VAULT_PATH=/app/vault

# ===========================================
# Application Settings
# ===========================================

# Enable debug mode (default: false)
DEBUG=false
